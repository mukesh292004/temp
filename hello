@FeignClient(name = "LEAVESERVICE", path = "/leave")
public interface LeaveClient {

    @GetMapping("/leavescounts/{employeeId}/{month}")
    int getApprovedLeaveCountForMonth(@PathVariable("employeeId") int employeeId,
                                      @PathVariable("month") int month);

    // ðŸ‘‡ Add this method to enable deleting leave records by employee ID
    @DeleteMapping("/delete-by-employee/{employeeId}")
    void deleteLeavesByEmployeeId(@PathVariable("employeeId") int employeeId);
}
